generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  username       String   @unique
  firstName      String?
  lastName       String?
  email          String   @unique
  profilePicture String?
  age            Int?
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @updatedAt
}

model Shows {
  id String @id @default(cuid())
  title String @unique
  thumbnail String
  releaseDate DateTime?
  bgImage String?
  genre String?
  rating Float? @default(0.0)
  description String?
  likes Int? @default(0)
  isPaid Boolean @default(false)
  isAvailable Boolean
  showsType String
  seasons Season[]
  features Feature[]
  trailers Trailer[]
}

model Video {
  id String @id @default(cuid())
  title String @unique
  url String
  createdAt DateTime? @default(now())
  episodes Episode[]
  features Feature[]
  trailers Trailer[]
}

model Season {
  id String @id @default(cuid())
  title String?
  showId String
  seasonNumber Int
  createdAt DateTime? @default(now())
  show   Shows   @relation(fields: [showId], references: [id]) // Foreign key relation
  episodes Episode[]
}

model Episode {
  id String @id @default(cuid())
  title String?
  episodeNumber Int
  seasonId String
  thumbnail String?
  description String?
  videoId String
  runTime Int @default(0)
  createdAt DateTime? @default(now())
  video Video @relation(fields: [videoId], references: [id])
  season Season @relation(fields: [seasonId], references: [id])
}

model Feature {
  id String @id @default(cuid())
  title String?
  thumbnail String?
  description String?
  showId String
  videoId String
  runTime Int @default(0)
  createdAt DateTime? @default(now())
  video Video @relation(fields: [videoId], references: [id])
  show Shows @relation(fields: [showId], references: [id])
}

model Trailer {
  id String @id @default(cuid())
  title String?
  thumbnail String?
  description String?
  showId String
  videoId String
  runTime Int @default(0)
  createdAt DateTime? @default(now())
  video Video @relation(fields: [videoId], references: [id])
  show Shows @relation(fields: [showId], references: [id])
}